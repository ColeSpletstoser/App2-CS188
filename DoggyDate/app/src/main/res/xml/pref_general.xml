    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="What's your dog's name?"
        android:inputType="text"
        android:key="dog_name"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Name" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="What's your dog's age?"
        android:inputType="text"
        android:key="dog_age"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Name" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="What's your dog's breed?"
        android:inputType="text"
        android:key="dog_breed"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Breed" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="Are they male or female?"
        android:inputType="text"
        android:key="dog_gender"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Gender" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="Tell us about them!"
        android:inputType="text"
        android:key="dog_description"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Description" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="What's your name?"
        android:inputType="text"
        android:key="owner_name"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Owner Name" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="A short blurb about yourself:"
        android:inputType="text"
        android:key="owner_description"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Owner Description" />

</PreferenceScreen>
