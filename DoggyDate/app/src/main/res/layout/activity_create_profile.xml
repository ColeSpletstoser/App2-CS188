<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs188.doggydate.CreateProfileActivity">

    <Button
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:id="@+id/finished_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Upload Dog Photo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/dog_photo_upload"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp" />

    <ImageView
        android:id="@+id/dogPic"
        android:layout_weight="1"
        android:layout_marginBottom="24dp"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_above="@+id/owner_photo_upload"
        android:layout_alignStart="@+id/ownerPic"></ImageView>

    <ImageView
        android:id="@+id/ownerPic"
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_above="@+id/finished_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"></ImageView>

    <Button
        android:text="Upload Owner Photo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/owner_photo_upload"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/ownerPic"
        android:layout_alignStart="@+id/dog_photo_upload" />

</RelativeLayout>
