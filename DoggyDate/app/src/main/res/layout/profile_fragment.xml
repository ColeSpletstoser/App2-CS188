<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="339dp"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="20dp">

        <ImageButton
            android:layout_height="30dp"
            android:id="@+id/settingsButton"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/settings"
            android:background="@android:color/transparent"
            android:layout_width="30dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/settings" />



        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                app:srcCompat="@drawable/shiba"
                android:id="@+id/dogImage"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="50dp"
                android:adjustViewBounds="true"
                android:layout_alignBottom="@+id/ownerImage"
                android:layout_alignParentStart="true"
                android:layout_marginTop="50dp"
                android:padding="6dp" />

            <ImageView
                android:src="@drawable/frame"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:id="@+id/dogFrame"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="50dp"/>

        </FrameLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_height="100dp"
                app:srcCompat="@drawable/profileimage"
                android:id="@+id/profileImage"
                android:padding="6dp"
                android:layout_width="100dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="220dp" />

            <ImageView
                android:src="@drawable/whiteframe"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/fakeframe"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="220dp" />

        </FrameLayout>

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Dog Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dogInfo"
                android:elevation="13dp"
                android:layout_marginLeft="30dp"
                android:textSize="32dp" />

            <View
                android:layout_height="1.25dp"
                android:background="#2f5135"
                android:layout_marginLeft="28dp"
                android:layout_width="250dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/pawprint"
                    android:id="@+id/imageView"
                    android:layout_marginLeft="20dp"
                    android:scaleType="fitCenter" />

                <TextView
                    android:text="Dog Breed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dogBreed"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/pawprint"
                    android:id="@+id/imageView2"
                    android:layout_marginLeft="20dp"
                    android:scaleType="fitCenter" />

                <TextView
                    android:text="Dog Gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/dogGender"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/pawprint"
                    android:id="@+id/imageView3"
                    android:layout_marginLeft="20dp"
                    android:scaleType="fitCenter" />

                <TextView
                    android:text="Dog Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/dogDescription"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:text="Owner Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ownerName"
                android:elevation="13dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:textSize="32dp" />

            <View
                android:layout_width="250dp"
                android:layout_height="1.25dp"
                android:background="#2f5135"
                android:layout_marginLeft="28dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/pawprint"
                    android:id="@+id/imageView4"
                    android:layout_marginLeft="20dp"
                    android:scaleType="fitCenter" />

                <TextView
                    android:text="Owner Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/ownerDescription"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_marginTop="2dp">

                <Button
                    android:text="Modify Your Dog's Picture!"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/uploadDog"
                    android:layout_weight="1"
                    android:elevation="19dp" />

                <Button
                    android:text="Modify your own picture!"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/uploadOwner"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>